<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vista.stockquote"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.vista.stockquote.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vista.stockquote.StockDetailsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.vista.stockquote.TimeChartActivity"
            android:label="@string/time_chart" >
        </activity>
        <activity
            android:name="com.vista.stockquote.KChartActivity"
            android:label="@string/k_chart" >
        </activity>
    </application>

</manifest>
